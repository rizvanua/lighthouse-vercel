{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "lib": ["ES2020", "DOM"],
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": ["node"],
      "typeRoots": ["./types", "./node_modules/@types"],
      "baseUrl": ".",
      "paths": {
        "@utils/*": ["utils/*"],
        "@types/*": ["types/*"]
      }
    },    
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  